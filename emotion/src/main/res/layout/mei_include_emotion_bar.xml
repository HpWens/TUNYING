<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/mei_shape_reply_edit"
        android:gravity="bottom"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/bar_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="喜欢就评论告诉TA"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"
                android:minHeight="36dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/aboveText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:id="@+id/emotion_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@mipmap/mei_input_emoji" />

    </LinearLayout>

    <TextView
        android:id="@+id/bar_tv_send"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:text="发送"
        android:textColor="#999999"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>