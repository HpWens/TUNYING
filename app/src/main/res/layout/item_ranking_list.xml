<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <com.tunyin.widget.CustomRoundAngleImageView
        android:id="@+id/image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        android:src="#fed256"
        roundiv:radius="10dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/iv_rank_grade"
        android:layout_toEndOf="@+id/image"
        android:singleLine="true"
        android:text="催眠大师"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/iv_rank_grade"
        android:layout_toEndOf="@+id/image"
        android:singleLine="true"
        android:textColor="#9A9A9A"
        android:text="催眠大师的儿子"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_price_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sub_title"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/image"
        android:text="钻石  "
        android:textColor="#908AEE"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sub_title"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/tv_price_tip"
        android:text="55"
        android:textColor="#908AEE"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_rank_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_rank_gold"
        android:visibility="gone" />

</RelativeLayout>