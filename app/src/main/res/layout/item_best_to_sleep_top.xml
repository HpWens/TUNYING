<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:orientation="horizontal">

    <www.linwg.org.lib.LCardView
        android:id="@+id/rl_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:cardUseCompatPadding="true"
        app:cornerRadius="15dp"
        app:shadowSize="5dp"
        app:shadowStartAlpha="30">

        <com.tunyin.widget.CustomRoundAngleImageView
            android:id="@+id/image"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="#fed256" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="145dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="8"
                android:singleLine="true"
                android:text="轻音乐睡眠曲"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="16dp"
                android:maxLines="2"
                android:singleLine="true"
                android:text="轻音乐睡眠曲"
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sub_title"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:text="钻石"
                android:textColor="#908AEE"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_diamond_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sub_title"
                android:layout_marginStart="6dp"
                android:layout_toRightOf="@+id/tv_diamond"
                android:paddingTop="4dp"
                android:text="45"
                android:textColor="#908AEE"
                android:textSize="11sp" />

        </RelativeLayout>

    </www.linwg.org.lib.LCardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="18dp"
        android:src="@mipmap/icon_pay_stuff_sound" />


</RelativeLayout>